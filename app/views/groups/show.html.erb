<p style="color: green"><%= notice %></p>

<%= render @group %>

<div>
  <% if current_user.groups.include?(@group) %>
  <%= button_to 'Leave Group', leave_group_path(@group), method: :post, class: 'btn btn-danger' %>
  <% else %>
  <%= button_to 'Join Group', join_group_path(@group), method: :post, class: 'btn btn-success' %>
  <% end %>
  <br>

  <%= link_to "Edit this group", edit_group_path(@group) , class: 'btn btn-secondary'%> |
  <%= link_to "Back to groups", groups_path , class: 'btn btn-secondary'%>

  
<p></p>
  <%= button_to "Destroy this group", @group, method: :delete %>
</div>
