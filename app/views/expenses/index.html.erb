<h1>Expenses</h1>

<div id="expenses">
  <% @expenses.each do |expense| %>
    <%= render expense %>
    <p>
      <%= link_to "Show this expense", expense , class: 'btn btn-secondary' %>
    </p>
  <% end %>
</div>

<%= link_to "New expense", new_expense_path, class: 'btn btn-secondary' %>
